{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Australian Prisoners by State",
    "projection": {"type": "mercator"},
    "data": {
      "url": "https://raw.githubusercontent.com/FouzUMS/FIT3179/refs/heads/main/Testing/STE_2021_AUST_GDA2020.json",
      "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
    },
    "params": [
      {
        "name": "yearChk",
        "value": "2013",
        "bind": {
          "input": "select",
          "options": ["2013","2014","2015","2016","2017","2018","2019","2020","2021","2022","2023"],
                "labels": [
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022",
                    "2023"
                ],
          "name": "Select Year: "
       }
      }
    ],
    "transform": [
      {
        "lookup": "properties.STE_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/FouzUMS/FIT3179/refs/heads/main/Testing/states_and_years.csv"
          },
          "key": "State",
          "fields": ["2013","2014","2015","2016","2017","2018","2019","2020","2021","2022","2023","Population"]
        }
      },
      {
        "calculate": "datum[yearChk]",
        "as": "Prisoner Population"
      }
    ],
    
    "mark": {"type": "geoshape", "stroke": "white"},
    "encoding": {
      "color": {
        "field": "Prisoner Population",
        "type": "quantitative",
        "scale": {
                "scheme": "purples"
            }
      },
      "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
        {"field": "Prisoner Population", "type": "quantitative", "title":"Prisoner Population"}
      ]
    }
  }



